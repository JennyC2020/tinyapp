<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" style="margin-left:30px;" href="/urls">My URLs</a>
        <a class="nav-item nav-link" style="margin-left:30px;" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (!user) { %>
    <form class="form-inline my-2 my-lg-0" method=GET action="/login">
      <button class="btn btn-light" type="submit" style="margin: 5px 5px;">Login</button>
    </form>
    <form class="form-inline my-2 my-lg-0" method=GET action="/register">
      <button class="btn btn-info" type="submit" style="margin: 5px 25px;">Register</button>
    </form>
    <% } else { %>
    <form class="form-inline my-2 my-lg-0" method=POST action="/logout">
      <p class="nav navbar-text" style="margin-right: 50px;">Logged in as: <%= user.email %></p>
      <button class="btn btn-info" type="submit">Logout</button>

    </form>
    <% } %>
  </nav>
</header>